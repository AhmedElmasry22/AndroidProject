<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AdminAddNewProduct">
    <ImageView
        android:id="@+id/select_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/select_product_image"
        android:scaleType="center"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintHeight_default="percent"

        ></ImageView>
    <EditText
        android:id="@+id/name_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_image"
        android:background="@drawable/join_button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="22sp"
        android:textColor="#fff"
        android:inputType="textMultiLine"
        android:hint="Enter Name product"
        android:padding="10dp"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHeight_default="percent"

        ></EditText>
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_product"
        android:background="@drawable/join_button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="22sp"
        android:textColor="#fff"
        android:inputType="textMultiLine"
        android:hint="Enter Name Description"
        android:padding="10dp"
        app:layout_constraintHeight_default="percent"

        ></EditText>
    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:background="@drawable/join_button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="22sp"
        android:textColor="#fff"
        android:inputType="textMultiLine"
        android:hint="Enter Price"
        android:padding="10dp"
        app:layout_constraintHeight_percent=".1"

        ></EditText>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffff"
        android:background="@drawable/buttons"
        android:textSize="22sp"
        android:text="Add Product"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHeight_default="percent"

        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>