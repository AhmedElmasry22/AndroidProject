<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminMaintainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"

        android:id="@+id/image_admin_Maintain"
        ></ImageView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/join_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/edit_name_admin_maintain"
        android:textColor="@color/purple_200"
        android:text="Name"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/join_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/edit_price_admin_maintain"
        android:textColor="@color/purple_200"
        android:text="Price"


        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/join_button"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/edit_descrepation_admin_maintain"
        android:textColor="@color/purple_200"
        android:text="Decreapation"

        ></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:id="@+id/aplay_change"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Apply Change"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        >

    </Button>

    <Button
        android:id="@+id/delete_item_admin_maintain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttons"
        android:text="Delete Item"
        android:textColor="@color/white"
        android:textSize="20sp">

    </Button>
</LinearLayout>