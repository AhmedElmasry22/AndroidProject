<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="name"
        android:padding="5dp"
        android:id="@+id/text_name_user_admin_order"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="number"
        android:padding="5dp"
        android:id="@+id/text_number_user_admin_order"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_number_user_admin_order"
        android:textSize="14sp"

        android:textColor="@color/white"
        android:text="address"
        android:padding="5dp"
        android:id="@+id/text_address_user_admin_order"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_address_user_admin_order"
        android:textSize="14sp"
         android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="address"
        android:padding="5dp"
        android:id="@+id/text_city_user_admin_order"
        >

    </TextView>
<Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:id="@+id/button_showd_detial_admin_order"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Show Details"
    app:layout_constraintTop_toBottomOf="@+id/text_city_user_admin_order"
    android:layout_marginTop="20dp"

    ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>