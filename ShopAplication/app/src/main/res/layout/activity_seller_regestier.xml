<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerRegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".3"
        android:background="@drawable/seller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_seller_regestair"

        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_seller_regestair"
        android:text="Seller Registration From"
        android:textAlignment="center"
        app:layout_constraintHeight_percent=".06"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#008000"
        android:id="@+id/text_regestair_form"

        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_name_seller_registair"
        app:layout_constraintTop_toBottomOf="@id/text_regestair_form"
        app:layout_constraintHeight_percent=".07"
        android:hint="Name..."
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_phone_registair_seller"
        app:layout_constraintTop_toBottomOf="@id/edit_name_seller_registair"
        app:layout_constraintHeight_percent=".07"
        android:hint="Phone..."
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_password_registair_seller"
        app:layout_constraintTop_toBottomOf="@id/edit_phone_registair_seller"
        app:layout_constraintHeight_percent=".07"
        android:hint="Password..."
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_email_registair_seller"
        app:layout_constraintTop_toBottomOf="@id/edit_password_registair_seller"
        app:layout_constraintHeight_percent=".07"
        android:hint="Email..."
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_address_registair_seller"
        app:layout_constraintTop_toBottomOf="@id/edit_email_registair_seller"
        app:layout_constraintHeight_percent=".07"
        android:hint=" Shop-Address..."
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        ></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_register_seller"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_address_registair_seller"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:textSize="20sp"
        app:layout_constraintHeight_percent=".07"

        ></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_login_seller_register"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="Already have Email"
        android:textSize="20sp"
        app:layout_constraintHeight_percent=".07"

        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>