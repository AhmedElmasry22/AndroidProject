<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerCatgoryActivity">



    <TextView
        android:id="@+id/text_add_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        android:layout_marginTop="20dp"
        android:text="Add Product"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
<LinearLayout
    android:id="@+id/first_Linear"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent=".18"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_add_product"
    android:layout_marginTop="80dp"
    android:weightSum="4"
    >
    <ImageView
        android:id="@+id/tshirt"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:background="@drawable/tshirts"
        android:layout_weight="1"
        ></ImageView>

    <ImageView
        android:id="@+id/sweather"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/sweather"
        android:onClick="onClick"></ImageView>
    <ImageView
        android:id="@+id/female_dresses"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:background="@drawable/female_dresses"
        android:layout_weight="1"
        ></ImageView>
    <ImageView
        android:id="@+id/sports"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:background="@drawable/sports"
        android:layout_weight="1"
        ></ImageView>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/sceand_Linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_Linear"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        >
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/glasses"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/purses_bags"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:background="@drawable/purses_bags"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/hats"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/hats"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/shoess"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/shoess"
            android:layout_weight="1"
            ></ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_Linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sceand_Linear"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        >
        <ImageView
            android:id="@+id/headphoness"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/headphoness"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"

            android:onClick="onClick"
            android:background="@drawable/laptops"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/watches"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/watches"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:background="@drawable/mobiles"
            ></ImageView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>